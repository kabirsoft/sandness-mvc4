
@model sandness_mvc4.Models.Login.LoginViewModel
@using sandness_mvc4.Models.Login;

@using ( Html.BeginForm("Index", "Login", FormMethod.Post) )
{
  <div class="panel panel-default">
     <div class="panel-heading"> <h1 class="panel-title"> Sign in</h1></div>
        <div class="panel-body">   
            <div class="Container">
                <div class="row">
                     <div class="form-group form-inline">
				          <span class="glyphicon glyphicon-user icon-style" ></span>
                          @Html.TextBoxFor(m => m.email, new {@placeholder="email"}) <span class="err_email"></span>
                     </div>
                </div>
                <div class="row">
                     <div class="form-group form-inline">
				          <span class="glyphicon glyphicon-lock icon-style" ></span>
                          @Html.PasswordFor(m => m.password, new {@placeholder="password"})<span class="err_password"></span>
                     </div>
                </div>
                <div class="row">
                        <div class="form-group form-inline">
			              <input type="submit" name="submit-button" value="Login" class="btb btn-default form-control" />                     
                        </div>     
                </div>
           </div>
       </div>
    </div>
    
}